@page
@model WebApplicationBibliotheek.Pages.ToevoegschermModel
@{
}
<form method="post">
	<div class="form-group">
		<label for="Titel">Titel</label>
		<input type="text" class="form-control" id="Titel" name="Titel" value="@Model.Titel" required />
	</div>
	<div class="form-group">
		<label for="GenreId">Genre ID</label>
		<input type="number" class="form-control" id="GenreId" name="GenreId" value="@Model.GenreId" required />
	</div>
	<div class="form-group">
		<label for="Auteur">Auteur</label>
		<input type="text" class="form-control" id="Auteur" name="Auteur" value="@Model.Auteur" required />
	</div>
	<div class="form-group">
		<label for="Uitgever">uitgever</label>
		<input type="text" class="form-control" id="Uitgever" name="Uitgever" value="@Model.Uitgever" required />
	</div>
	<div class="form-group">
		<label for="TaalId">TaalId</label>
		<input type="number" class="form-control" id="TaalId" name="taalId" value="@Model.taalId" required />
	</div>
	<div class="form-group">
		<label for="Graad">Graad</label>
		<input type="number" class="form-control" id="Graad" name="Graad" value="@Model.Graad" required />
	</div>
	<div class="form-group">
		<label for="ISBN">ISBN</label>
		<input type="text" class="form-control" id="ISBN" name="ISBN" value="@Model.ISBN" required />
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Toevoegen</button>
	</div>
</form>

@if (Model.Bericht != null)
{
	<div class="alert alert-success mt-3">@Model.Bericht</div>
}